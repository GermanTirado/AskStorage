
@{
    ViewData["Title"] = "Preguntas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de Preguntas</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Nueva Pregunta</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblPreguntas" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Interrogante</th>
                <th>Respuesta Correcta</th>
                <th>Categoria</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/pregunta.js"></script>
}

